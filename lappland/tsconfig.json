{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "ESNext"],
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
